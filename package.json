{
  "name": "catabe",
  "version": "1.0.0",
  "description": "Proyecto backend de una app web para gestionar propiedades inmobiliarias.",
  "license": "MIT",
  "engines": {
    "node": ">=22.17.0",
    "npm": ">=11.6.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joseluisdaza/CataBE.git"
  },
  "bugs": {
    "url": "https://github.com/joseluisdaza/CataBE/issues"
  },
  "homepage": "https://github.com/joseluisdaza/CataBE#readme",
  "scripts": {
    "dev": "tsnd --respawn --clear src/app.ts",
    "build": "rimraf ./dist && tsc",
    "build:di": "copyfiles -u 1 \"src/**/*.yaml\" \"src/**/*.json\" \"src/**/*.html\" \"src/**/*.png\" dist",
    "start": "npm run build && npm run build:di && node dist/app.js",
    "test": "npm run test:unit && npm run test:acceptance",
    "test:unit": "NODE_ENV=test jest",
    "test:unit:watch": "NODE_ENV=test jest --watch",
    "test:unit:coverage": "NODE_ENV=test jest --coverage",
    "test:acceptance": "NODE_ENV=test cucumber-js"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.4.1",
    "jest": "^30.2.0",
    "rimraf": "^6.1.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node-dev": "^2.0.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.3",
    "env-var": "^7.5.0",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-dependency-injection": "^3.2.4",
    "pg": "^8.16.3",
    "puppeteer": "^24.32.0",
    "typeorm": "^0.3.27",
    "uuid": "^8.3.2"
  }
}
